# vim: filetype=i3

set $Alt Mod1
set $Super Mod4

set $term st
set $brows "notify-send -i '~/.local/share/icons/opera.png' ' ';$BROWSER"
set $spcalc st -n spcalc -f "monospace:size=16" -g "50x20" -e bc -lq
set $timer st -c time -n time -f "roboto mono nerd font:pixelsize=27:antialias=true:autohint=true" -g 10x3 -e timer.sh

# start i3bar to display a workspace bar
bar {
    status_command         SCRIPT_DIR=$HOME/.config/i3blocks/scripts_i3 i3blocks
    bindsym button4         nop
    bindsym button5         nop
    position                bottom
    tray_output             primary
    separator_symbol        "·"
    workspace_buttons       yes
    strip_workspace_numbers yes
}

#Needed for i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 0
gaps inner 2
gaps outer 2

font xft:URWGothic-Book 11

############## AUTOSTART ##############

###---touchpad---###
exec --no-startup-id synclient VertEdgeScroll=1 TapButton1=1 TapButton2=3 TapButton3=2 PalmDetect=1 VertEdgeScroll=0 HorizEdgeScroll=0 PalmMinWidth=5

###---Цветовая температура экрана ---###
# -b 1.0:0.7 уровень яркости день:ночь
# -t 6500:3200 цветовая температура день:ночь
# -l 45:39 укороченные координаты местонахождения latitude:longitude (ширина:долгота). Узнать свои координаты
# https://www.latlong.net/
exec --no-startup-id redshift -b 1.0:0.7 -t 6500:3200 -l 45:39
exec --no-startup-id flameshot

#Add wallpaper:
exec --no-startup-id feh --bg-fill ~/.local/share/bg
#exec_always --no-startup-id wal -c -i ~/.config/wall.png
exec_always --no-startup-id remaps
# Обновление конфигурации и i3blocks
exec --no-startup-id pkill -RTMIN+8 i3blocks


exec --no-startup-id xautolock -time 1 -locker ~/.config/i3/lock

# Use Mouse+$mod to drag floating windows
floating_modifier $Super
focus_follows_mouse no


