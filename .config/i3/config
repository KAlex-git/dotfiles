###--- Windows Manipulation ---###
bindsym $Super+Shift+y		resize shrink width 10 px or 10ppt
bindsym $Super+Shift+u		resize grow height 10 px or 10 ppt
bindsym $Super+Shift+i		resize shrink height 10 px or 10 ppt
bindsym $Super+Shift+o		resize grow width 10 px or 10 ppt

bindsym $Super+f			fullscreen toggle
bindsym $Super+a			workspace prev
bindsym $Super+semicolon	workspace next

bindsym $Super+h			focus left
bindsym $Super+j			focus down
bindsym $Super+k			focus up
bindsym $Super+l			focus right

bindsym $Super+Shift+h		move left 30
bindsym $Super+Shift+j		move down 30
bindsym $Super+Shift+k		move up 30
bindsym $Super+Shift+l		move right 30


bindsym $Super+x			gaps inner current plus 5
bindsym $Super+Shift+x		gaps inner current minus 5
bindsym $Super+Shift+d		gaps inner current set 0; gaps outer current set 0
bindsym $Super+Shift+t		gaps inner current set 15; gaps outer current set 15

# binding for lock screen
bindsym $Super+$Alt+x		exec --no-startup-id ~/.config/i3/lock



bindsym $Super+r                exec $term -e lfub
bindsym $Super+Return 		    exec $term
bindsym $Super+Shift+Return 	exec $term -e tmux
bindsym $Super+n			    exec $term -e newsboat
bindsym $Super+d            exec dmrun -fn monospace:size=10 -l 5


bindsym $Alt+q		        [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $Alt+BackSpace		restart
bindsym $Alt+Shift+q		[con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`
bindsym $Alt+grave		exec dmenuunicode
bindsym $Super+Shift+q		kill
bindsym $Super+BackSpace	exec dmMenu

#STOP/HIDE EVERYTHING:
bindsym $Super+Shift+Delete	exec $truemute ; exec $truepause ; workspace lmao ; exec $term -e htop ; exec $term -e lfub


##### --- Twince keyboards --- #####

mode "bro[w]ser [e]copylinkBrowser [n]mtui" {
    bindsym a exec dm-bookman, mode "default"
    bindsym e exec copylinkBrowser, mode "default"
    bindsym n exec st -e sudo nmtui, mode "default"
    bindsym w exec $brows, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

##########
mode "[m]socialweb [n]mounter [u]nmounter" {
    bindsym m exec fixsocialweb, mode "default"
    bindsym n exec mounter, mode "default"
    bindsym u exec unmounter, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# -- Twine keys for calculator, ncmpcpp and timer {{{ 
mode "[c]alculator [m]usic t[i]mer my[t]etra" {
    bindsym c exec $spcalc, mode "default"
    bindsym m exec $music, mode "default"
    bindsym s exec spotify, mode "default"
    bindsym i exec $timer, mode "default"  
    bindsym t exec FixMyTetra.sh, mode "default"  

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
#--}}}
mode "dm-ali[a]s [e]lectroFast dtos-[c]olorscheme [h]apps_man dm-[k]ill dm-[r]adio pa[s]smenu [y]upgrade" {
    bindsym a exec dm-alias, mode "default"
    bindsym m exec electroFast, mode "default"
    bindsym c exec dtos-colorscheme, mode "default"
    bindsym h exec apps_man, mode "default"
    bindsym k exec dm-kill, mode "default"
    bindsym r exec dm-radio, mode "default"
    bindsym s exec passmenu.sh, mode "default"
    bindsym y exec st -e sb-popupgrade  , mode "default"
    
    bindsym Escape mode "default"
    bindsym Return mode "default"
}


