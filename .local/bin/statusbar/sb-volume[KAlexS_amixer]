#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e alsamixer ; kill -44 $(pidof dwmblocks) ;;
	2) amixer set Master toggle ;;
	4) amixer set Master 2+ ;;
	5) amixer set Master 2- ;;
	3) pavucontrol ;;
	# 3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
# - Middle click to mute.
# - Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac


micstat=$(amixer sget 'Internal Mic Boost' | tail -n 1 | awk '{print $4}' | tr -d "[%]")

if [ "$micstat" == "100" ]; then
	ico="ï„°"
elif [ "$micstat" == "67" ]; then
	ico="ï„°"
elif [ "$micstat" == "33" ]; then
	ico="ï„°"
elif [ $micstat = 0 ];then
	ico="ï„°"
fi



vol="$(amixer sget 'Master' | tail -n 1 | awk '{print $5}' | sed 's/\[\(.*\)\%\]/\1/')"

[[ "$vol" = 0 || "$vol" = "" ]] && echo "ðŸ”‡ ï„°$micstat%" | sed "s/ï„°0\%/ï„±/" && exit

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ $ico$micstat% | sed "s/ï„°0\%/ï„±/" && exit

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s%s\n" "$icon$vol% $ico$micstat%" | sed "s/ï„°0\%/ðŸ”‡/"
